{
  "// extends can't be used, because deploys don't get entire repo": "",
  "// compilerOptions here is just copied from the root.": "",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noErrorTruncation": true,
    // "noUncheckedIndexedAccess": true, -- cant use with graphql-zeus
    "noEmitOnError": false // <- remove this later
  },
  "exclude": ["node_modules", "./dist", "./dist-ts", "./test", "**/*.docs.tsx"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
