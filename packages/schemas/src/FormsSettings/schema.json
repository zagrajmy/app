{
  "$schema": "http://json-schema.org/schema#",
  "title": "FormsSettings",
  "additionalProperties": true,
  "type": "object",
  "properties": {
    "forms": {
      "type": "array",
      "items": {
        "title": "Form",
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "introText": {
            "type": "string"
          },
          "footerText": {
            "type": "string"
          },
          "waitlist": {
            "type": "string"
          },
          "fieldsets": {
            "type": "array",
            "items": {
              "title": "Fieldset",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "fields": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "title": "BaseField",
                        "type": "object",
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "required": {
                            "type": "boolean"
                          },
                          "description": {
                            "type": "string"
                          }
                        },
                        "required": ["label", "type", "name", "required"]
                      },
                      {
                        "anyOf": [
                          {
                            "title": "SingleValueField",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": [
                                  "line",
                                  "text",
                                  "email",
                                  "phone",
                                  "discord",
                                  "checkbox"
                                ]
                              }
                            },
                            "required": ["type", "choices"]
                          },
                          {
                            "title": "ChoiceField",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": ["single-choice", "multiple-choice"]
                              },
                              "choices": {
                                "type": "object",
                                "additionalProperties": {
                                  "anyOf": [
                                    { "type": "string" },
                                    { "type": "number" }
                                  ]
                                }
                              }
                            },
                            "required": ["type", "choices"]
                          }
                        ]
                      }
                    ]
                  }
                }
              },
              "required": ["description", "fields"]
            }
          }
        },
        "required": [
          "title",
          "introText",
          "footerText",
          "waitlist",
          "fieldsets"
        ]
      }
    }
  },
  "required": ["forms"]
}
